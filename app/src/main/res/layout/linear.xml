<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calculator"
        android:gravity="center_vertical"
        android:textSize="25"
        android:background="#E6938D"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textSize="50sp"
        android:gravity="right||bottom"
        android:textColor="#6E6D6D"
        android:background="#F1EEEF"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="0"
        android:textSize="80sp"
        android:gravity="right||bottom"
        android:textColor="#6E6D6D"
        android:background="#F1EEEF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="40dp"
            android:background="#E6E4E4"/>

        <Button
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40dp"
            android:background="#E6E4E4"/>

        <Button
            android:id="@+id/bs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BS"
            android:textSize="40dp"
            android:background="#E6E4E4"/>

        <Button
            android:id="@+id/chia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="40dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/tam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/chin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/nhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="40dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/nam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/sau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/cong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/hai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/ba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/tru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="40dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/doidau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="40dp"
            android:background="#E6E4E4"/>

        <Button
            android:id="@+id/ko"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40dp"
            android:background="#F3F0F0"/>

        <Button
            android:id="@+id/cham"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="40dp"
            android:background="#E6E4E4"/>

        <Button
            android:id="@+id/bang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="40dp"
            android:background="#E6E4E4"/>
    </LinearLayout>

</LinearLayout>
