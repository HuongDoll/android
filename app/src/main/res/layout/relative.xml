<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:id="@+id/="
        android:text="="
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        tools:ignore="InvalidId" />

    <Button
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:id="@+id/."
        android:text="."
        android:textSize="40dp"
        android:layout_toLeftOf="@+id/="
        android:layout_alignBottom="@+id/=" />

    <Button
        android:id="@+id/0"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_alignBottom="@+id/="
        android:layout_toLeftOf="@+id/."
        android:text="0"
        android:textSize="40dp" />

    <Button
        android:id="@+id/m"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_alignBottom="@+id/="
        android:layout_toLeftOf="@+id/0"
        android:text="+/-"
        android:textSize="40dp" />

    <Button
        android:id="@+id/-"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/="
        android:layout_toRightOf="@+id/."
        android:text="-"
        android:textSize="40dp" />

    <Button
        android:id="@+id/3"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/="
        android:layout_toRightOf="@+id/0"
        android:text="3"
        android:textSize="40dp" />

    <Button
        android:id="@+id/2"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/="
        android:layout_toRightOf="@+id/m"
        android:text="2"
        android:textSize="40dp" />

    <Button
        android:id="@+id/1"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/="
        android:layout_toLeftOf="@+id/0"
        android:text="1"
        android:textSize="40dp" />

    <Button
        android:id="@+id/+"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/-"
        android:layout_toRightOf="@+id/."
        android:text="+"
        android:textSize="40dp" />

    <Button
        android:id="@+id/6"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/-"
        android:layout_toRightOf="@+id/0"
        android:text="6"
        android:textSize="40dp" />

    <Button
        android:id="@+id/5"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/-"
        android:layout_toRightOf="@+id/m"
        android:text="5"
        android:textSize="40dp" />

    <Button
        android:id="@+id/4"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/-"
        android:layout_toLeftOf="@+id/0"
        android:text="4"
        android:textSize="40dp" />

    <Button
        android:id="@+id/*"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/+"
        android:layout_toRightOf="@+id/."
        android:text="*"
        android:textSize="40dp" />

    <Button
        android:id="@+id/9"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/+"
        android:layout_toRightOf="@+id/0"
        android:text="3"
        android:textSize="40dp" />

    <Button
        android:id="@+id/8"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/+"
        android:layout_toRightOf="@+id/m"
        android:text="8"
        android:textSize="40dp" />

    <Button
        android:id="@+id/7"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/+"
        android:layout_toLeftOf="@+id/0"
        android:text="7"
        android:textSize="40dp" />

    <Button
        android:id="@+id/x"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/*"
        android:layout_toRightOf="@+id/."
        android:text="/"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bs"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/*"
        android:layout_toRightOf="@+id/0"
        android:text="BS"
        android:textSize="40dp" />

    <Button
        android:id="@+id/c"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/*"
        android:layout_toRightOf="@+id/m"
        android:text="C"
        android:textSize="40dp" />

    <Button
        android:id="@+id/ce"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_above="@+id/*"
        android:layout_toLeftOf="@+id/0"
        android:text="CE"
        android:textSize="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="0"
        android:textSize="80sp"
        android:layout_above="@+id/x"
        android:gravity="right||bottom"
        android:textColor="#6E6D6D"
        android:background="#ECE2E5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#E6938D"
        android:gravity="center_vertical"
        android:text="Calculator"
        android:textColor="#000"
        android:textSize="25dp" />



</RelativeLayout>